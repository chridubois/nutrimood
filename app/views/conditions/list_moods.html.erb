 <% content_for :navbar do %>
  <%= render 'shared/navbar_blue' %>
<% end %>
<div class="layout list-mood"
     data-controller="moods-list">
  <br>
  <h1 class="title list-mood">Je suis plut√¥t...</h1>
  <form action="list_moods" method="POST" data-turbo=false class="text-center">
    <div class="moods-list">
      <% idx = 0 %>
      <% @moods.each_with_index do |mood, index|%>
        <div class="mood-item"
          data-action="click->moods-list#selectAMood"
          data-moods-list-target="item1"
          data-moods-list-idx-param="<%= idx %>"
          data-moods-list-url-param="<%= mood.logo %>">
          <label> <%= mood.name %>
            <input type="checkbox" name="mood_id" value="<%= mood.id %>"
                  data-moods-list-target="checkbox"
                  visibility: hidden  />
          </label>
        </div>
        <% idx += 1 %>
      <% end %>
    </div>
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
    <div class="emoticone">
      <img src="https://www.pngmart.com/files/19/Sad-Emoticon-PNG-File.png" id="emoticone" visibility: hidden data-moods-list-target="emoticone">
    </div>
    <input visibility: hidden type="submit" value="Suivant"
      class="button list-mood"
      data-moods-list-target="btn" />
  </form>
</div>
<h1 class="title bottom list-mood">Ton mood ?</h1>
<div class="indicators list-mood">
  <div class="indicator-item active"></div>
  <div class="indicator-item"></div>
  <div class="indicator-item"></div>
</div>
