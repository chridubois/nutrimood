<% content_for :meta_title, "Connectes toi" %>
<% content_for :meta_description, "Connectes toi pour commencer ton expérience Nutrimood !" %>
<div class="navbar_nutrimood green">
  <%= link_to "/", class: "navbar-brand" do %>
    <div class="logo green">nutrimood
      <i class="fa-solid fa-user"></i>
    </div>
  <% end %>
</div>
<div class="layout-green">
  <div class="sign_in new_user p-2">
    <%= link_to new_user_session_path, class: "google_oauth_link" do %>
      <div class="google_oauth mt-3">
        <i class="fa-brands fa-google"></i>Se connecter avec Google
      </div>
    <% end %>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs mt-4">
        <%= f.input :email,
                required: false,
                autofocus: true,
                placeholder: "mail@domain.com",
                input_html: { autocomplete: "email", class: "login-input" } %>
        <%= f.input :password,
                required: false,
                label: "Mot de passe",
                placeholder: "Min. 8 caractères",
                input_html: { autocomplete: "current-password", class: "login-input" } %>
        <div class="remember_form d-flex justify-content-between">
          <%= f.input :remember_me, as: :boolean, label: "Mémoriser" if devise_mapping.rememberable? %>
          <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Je me connecte", class: "login-button" %>
      </div>
    <% end %>
    <div class="subscribe mt-3">
      Pas encore inscrit.e ? <%= link_to "S'inscrire", new_registration_path(resource_name) %>
    </div>
  </div>
</div>
<h1 style="color:#76B041">Connecte toi !</h1>
