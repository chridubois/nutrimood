<% content_for :meta_title, "Liste d'ingrÃ©dients de la recette #{@recipe.name}" %>
<% content_for :meta_description, "Nutrimood, app incroyable pour savoir comment mieux manger" %>
<% content_for :navbar do %>
  <%= render 'shared/navbar_green' %>
<% end %>
<div class="layout-green fond-shop">
  <div data-controller="carrot">

    <%= link_to recipe_path(@recipe), class: "orange-close" do %>
      <i class="fa-solid fa-circle-xmark fa-3x"></i>
    <% end %>

     <div class="person-number">
      <div class="btn-minus nber"><i class="fa-solid fa-minus"></i></div>
      <div class="btn-carrot"><i class="fa-solid fa-carrot fa-2x"></i>
      <i class="fa-solid fa-carrot fa-3x"></i>
      <i class="fa-solid fa-carrot fa-2x"></i></div>
      <div class="btn-plus nber"><i class="fa-solid fa-plus"></i></div>
    </div>

    <div class="content-bloc justify-content-center">
      <div class="ingredient-list">
        <% @recipe.recipes_ingredients.each do |recipes_ingredient| %>
          <div class="ingredient-checkbox">
            <input type="checkbox" id="<%= recipes_ingredient.ingredient.id %>" name="<%= recipes_ingredient.ingredient.name %>" unchecked>
            <% if recipes_ingredient.unit %>
              <%= recipes_ingredient.quantity %>
              <%= recipes_ingredient.unit %>
              <%= recipes_ingredient.ingredient.name %>
            <% else %>
              <%= recipes_ingredient.ingredient.name %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

    <%= link_to show_detailed_path(@recipe), class: "to_shoplist-button" do %>
      <i class="fa-solid fa-check"></i> J'AI TOUT
    <% end %>
</div>
