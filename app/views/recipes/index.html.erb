<% content_for :meta_title, "Tes propositions de recettes !" %>
<% content_for :meta_description, "Nutrimood te liste entre 1 et 3 propositions de recettes triées sur le volet par rapport à ton mood, ton niveau d'énergie et tes symptômes" %>
<% if !@recipes_proposal.empty? %>
<div id="carouselExampleControls" class="carousel slide" data-bs-interval="false">
  <div class="carousel-inner">
    <% @recipes_proposal.each_with_index do |recipe, index|%>
      <% if index == 0 %>
        <div class="carousel-item active">
          <%= render 'shared/navbar_blue' %>
          <%= render 'recipes/recipe_card', recipe: recipe, color: "blue" %>
          <%# <div class="indicators list-moods">
            <div class="indicator-item active"></div>
            <div class="indicator-item"></div>
            <div class="indicator-item"></div>
          </div> %>
        </div>
      <% elsif index == 1 %>
        <div class="carousel-item">
          <%= render 'shared/navbar_yellow' %>
          <%= render 'recipes/recipe_card', recipe: recipe, color: "yellow" %>
          <%# <div class="indicators list-energy">
            <div class="indicator-item"></div>
            <div class="indicator-item active"></div>
            <div class="indicator-item"></div>
          </div> %>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= render 'shared/navbar_red' %>
          <%= render 'recipes/recipe_card', recipe: recipe, color: "red" %>
          <%# <div class="indicators list-symptoms">
            <div class="indicator-item"></div>
            <div class="indicator-item"></div>
            <div class="indicator-item active"></div>
          </div> %>
        </div>
      <% end %>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<% else %>
<div class="navbar_nutrimood d-flex justify-content-center green">
  <div class="bloc-navbar d-flex">
    <%= link_to "/menu", class: "navbar-brand" do %>
      <div class="logo green">nutrimood
      </div>
    <% end %>
    <%= link_to "/profil", class: "avatar" do %>
      <div class="logo green">
        <i class="fa-solid fa-user"></i>
      </div>
    <% end %>
  </div>
</div>

<div class="layout-green">
  <br>
  <h1 style="color: white; width: 250px; margin: auto">Aucune recette ne convient </h1>
  <br>
</div>

<% end  %>
